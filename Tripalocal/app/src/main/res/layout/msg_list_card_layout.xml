<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingTop="2dp"
    android:paddingRight="15dp"
    android:paddingLeft="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msg_list_card_view"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context="com.tripalocal.bentuke.Views.BlankFragment"
            android:id="@+id/conversation_item"
            android:paddingBottom="20dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/conversion_total"
                android:layout_marginLeft="5dp"
                android:weightSum="1">

                <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/exp_list_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/profile_default"
                app:border_width="2dp"
                app:border_color="#ffffff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-3dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="20dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Felx"
                            android:id="@+id/msg_sender"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:layout_gravity="left"
                            android:layout_weight="3" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:text="@string/msg_mins_to_now"
                            android:id="@+id/msg_time"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:gravity="right"
                            android:layout_gravity="bottom"
                            android:layout_weight="2"
                            android:paddingTop="5dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="is this a terla eajdlask dasjaskld asdjaksd asjadskdjaskd "
                        android:id="@+id/msg_brief"
                        android:layout_row="1"
                        android:layout_column="0"
                        android:layout_columnSpan="2"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginRight="60dp" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:id="@+id/divider_msg_list"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>