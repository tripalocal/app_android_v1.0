<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tripalocal.bentuke.Views.BlankFragment"
    android:background="@color/tripalocal_light_grey"
    android:id="@+id/conversation_item">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/msg_list_card_view"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:context="com.tripalocal.bentuke.Views.BlankFragment"
                    android:paddingBottom="20dp"
                    android:background="@color/tripalocal_light_grey"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/conversion_total"
                        android:layout_marginLeft="5dp"
                        android:weightSum="1">

                        <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginRight="10dp"
                            android:src="@drawable/support_img"
                            app:border_width="2dp"
                            app:border_color="#ffffff"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="-3dp" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceLarge"
                                    android:text="@string/customer_support_name"
                                    android:layout_row="0"
                                    android:layout_column="0"
                                    android:layout_gravity="left"
                                    android:layout_weight="3" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="28dp"
                                    android:text="17/02 19:32"
                                    android:id="@+id/msg_time"
                                    android:layout_row="0"
                                    android:layout_column="1"
                                    android:gravity="right"
                                    android:layout_gravity="bottom"
                                    android:layout_weight="3"
                                    android:paddingTop="5dp"/>

                            </LinearLayout>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="is this a terla eajdlask dasjaskld asdjaksd asjadskdjaskd ;jkllllllllllllllllllllllllll"
                                android:id="@+id/msg_brief"
                                android:layout_row="1"
                                android:layout_column="0"
                                android:layout_columnSpan="2"
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="20dp"
                                android:layout_marginRight="60dp" />

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/divider_msg_list"
                    android:layout_width="337dp"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/tripalocal_light_grey"/>

    </LinearLayout>

</RelativeLayout>
