<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="tripalocal.com.au.tripalocalbeta.Views.PaymentActivityFragment"
    android:background="@color/white"
    >

    <TableLayout
        android:id="@+id/payment_list_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TableRow
            android:id="@+id/table_alipay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dip">


            <ImageView

                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/alipay"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/te"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/Alipay_checkout_text"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="@string/alipay"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="23sp"
                    android:clickable="true" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16sp" />
            </LinearLayout>

        </TableRow>

        <View
            android:id="@+id/divider_line_1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@id/table_alipay"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:id="@+id/table_credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >


            <ImageView

                android:id="@+id/creadit_payment_img"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:src="@drawable/creditcard_box"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/credit_options"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/credit_checkout_text"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:text="@string/credit_card"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/add_creadit_account"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16sp" />
            </LinearLayout>
        </TableRow>

        <View
            android:id="@+id/divider_line_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@id/table_credit"
            android:background="@android:color/darker_gray" />


        <TableRow
            android:id="@+id/table_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView

                android:id="@+id/wechat_payment_img"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_column="0"
                android:focusableInTouchMode="false"
                android:src="@drawable/wechat"
                android:layout_margin="5dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/wechat_options"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/wechat_checkout_text"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="15dp"
                    android:text="@string/wechat"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="23sp" />

                <TextView
                    android:id="@+id/add_wechat_account"
                    android:layout_width="227dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:layout_marginTop="5dp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="16sp" />
            </LinearLayout>
        </TableRow>


        <View
            android:id="@+id/divider_line_3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_above="@id/table_wechat"
            android:background="@android:color/darker_gray" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </TableRow>
    </TableLayout>

</RelativeLayout>
