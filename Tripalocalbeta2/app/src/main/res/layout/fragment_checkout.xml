<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/booking_super_container">
    <ScrollView
    android:id="@+id/my_trip_scroll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


<RelativeLayout  android:layout_width="match_parent"
    android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="tripalocal.com.au.tripalocalbeta.Views.CheckoutActivityFragment"
    android:background="@color/tripalocal_light_grey"
    android:fontFamily="light"
    android:layout_marginBottom="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/booking_top_part"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.4"
            android:id="@+id/booking_thumbnail"
            android:src="@color/tripalocal_light_green"
        />
        <!-- adde xpenses and info on saved lang duration -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="0.6"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:paddingLeft="15dp"
                android:id="@+id/booking_title"
                android:text="@string/checkout_title_placeholder"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/booking_duration"
                    android:text="2hrs ."/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/booking_language"
                    android:text="english"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/booking_top_part"
        android:stretchColumns="*"
        android:shrinkColumns="*">
        <TableRow
                android:layout_width="wrap_content">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/date"
                android:id="@+id/booking_date_image"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:contentDescription="date_img" />
            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/time"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:contentDescription="time_img" />
            </TableRow>
        <TableRow
                android:layout_width="wrap_content"
                >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/booking_date_label"
                android:text="Date"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/booking_time_label"
                android:text="Time"
                android:layout_weight="1"
                android:gravity="center_horizontal" />
                </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/booking_date_txt1"
                android:background="#ff0c7c4a"
                android:text="dd/mm/yy"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:background="#ff0c7c4a"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:src="@drawable/instant_booking"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/booking_time_txt1"
                    android:text="hh:mm"
                    android:textColor="@color/white"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="6dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/booking_date_txt2"
                android:text="dd/mm/yy"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp" />
            <!--android:background="#ff0c7c4a"-->
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:src="@drawable/instant_booking"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/booking_time_txt2"
                    android:text="hh:mm"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="6dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="25dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/booking_date_txt3"
                android:text="dd/mm/yy"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:layout_weight="1"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp" />
            <LinearLayout
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:src="@drawable/instant_booking"
                    android:layout_marginLeft="10dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/booking_time_txt3"
                    android:text="hh:mm"
                    android:layout_gravity="end"
                    android:layout_marginLeft="20dp"
                    android:paddingTop="6dp"/>
            </LinearLayout>
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="25dp">
            <Button
                android:id="@+id/booking_Select_Date_Btn"
                android:text="Select Date"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/my_trip_call_button_shape"
                android:textColor="@color/tripalocal_green_blue"/>

            <Button
                android:id="@+id/booking_Select_Time_Btn"
                android:text="Select Time"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@drawable/my_trip_call_button_shape"
                android:textColor="@color/tripalocal_green_blue"/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp">
           <TextView
               android:id="@+id/booking_guests_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Guests"
                android:gravity="center"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp">
            <!--<TextView
                android:id="@+id/booking_date_selector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Date selector"
                android:gravity="center"
                android:textStyle="bold"/>-->
            <NumberPicker
                android:id="@+id/numberPicker1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="0.7"
                />

        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_marginTop="15dp">
            <TextView
                android:id="@+id/booking_price_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:gravity="center"
                android:textStyle="bold"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/booking_price_and_person_txt"
                    android:text="$35 AUD x 3 pp"
                    android:gravity="start"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/booking_price_total_amt_txt"
                    android:text="$ 105 AUD"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/tripalocal_green_blue"
                    android:gravity="end"/>
            </LinearLayout>
                <View style="@style/DarkDivider"
                    android:layout_marginTop="15dp"
                    android:id="@+id/booking_divider_1"
                    />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:id="@+id/booking_price_coupon_container"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/booking_price_coupon_txt"
                    android:text="Coupon"
                    android:gravity="start"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/booking_price_coupon_edit"
                    android:text="code"
                    android:layout_marginLeft="45dp"
                    android:textColor="@color/tripalocal_green_blue"
                    android:gravity="end"/>
            </LinearLayout>
        </TableRow>
        <TableRow
        android:layout_width="match_parent"
            android:layout_marginTop="20dp"
        >
    <ImageView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:src="@drawable/money"
        android:contentDescription="pay_ok_to_change_image"/>
    </TableRow>
        <TableRow
        android:layout_width="match_parent"
            android:layout_marginTop="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="It's ok to change your mind"
        android:gravity="center"/>
    </TableRow>
        <TableRow
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you cancel at least 7 calendar dats in advance, there is no cancellation fee."
                />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you cancel between 3 and 6 calendar days in advance, you will be charge a 50% cancellation fee."
                />
        </TableRow>
        <TableRow android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you cancel within 2 calendar days in advance, you will be charged a 100% cancellation fee."
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="40dp">
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="You can also view our "
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/tripalocal_green_blue"
                    android:text="Refund policy"
                    />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    </RelativeLayout>
</ScrollView>
<Button
android:id="@+id/booking_bottom_Btn"
android:text="Proceed to Payment"
android:layout_alignParentBottom="true"
android:layout_height="wrap_content"
android:layout_width="match_parent"
android:background="@drawable/booking_btn_shape"
android:textColor="@color/white"/>


</RelativeLayout>