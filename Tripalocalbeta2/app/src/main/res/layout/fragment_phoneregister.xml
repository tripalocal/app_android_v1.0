<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/booking_super_container">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/exp_detail_review_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:weightSum="1"
        android:background="@drawable/background_phonereg">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="216dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/tripalocal_logo_en"
            android:layout_marginTop="40dp" />

        <ImageView
            android:layout_width="129dp"
            android:layout_height="44dp"
            android:id="@+id/imageView3"
            android:src="@drawable/tripalocal_logo_ch"
            android:layout_gravity="center_horizontal" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/phone_no_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/login_input"
                android:hint="@string/phone_no_hint"
                android:inputType="numberSigned"
                android:paddingBottom="10dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/tripalocal_hint"
                android:textCursorDrawable="@null"
                android:layout_marginTop="15dp" />

            <Button
                android:id="@+id/verfication_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/tripalocal_green_blue"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:text="@string/send_verf_code"
                android:textAlignment="center"
                android:textColor="@color/white" />

            <LinearLayout
                android:id="@+id/phone_verif"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <EditText
                    android:layout_width="0dp"
                    android:id="@+id/verfi_code_edit"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login_input"
                    android:hint="@string/phone_no_hint"
                    android:inputType="numberSigned"
                    android:paddingBottom="10dp"
                    android:paddingLeft="35dp"
                    android:paddingRight="35dp"
                    android:paddingTop="10dp"
                    android:textColorHint="@color/tripalocal_hint"
                    android:textCursorDrawable="@null"
                    android:layout_marginTop="10dp"
                    android:layout_weight="5"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm"
                    android:id="@+id/confirm_btn"
                    android:layout_marginTop="10dp"
                    android:background="@color/tripalocal_green_blue"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/white"
                    android:layout_weight="2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginTop="-10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_has_account"
                    android:textColor="@color/white"/>



                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/signup_login"
                    android:text="@string/login_login"
                    android:background="@android:color/transparent"
                    android:textColor="@color/tripalocal_green_blue"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:padding="10dp"
                    android:clickable="true" />
            </LinearLayout>

            <!--<Button-->
                <!--android:id="@+id/button"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:onClick="backdoor"-->
                <!--android:text="New Button" />-->

        </LinearLayout>
    </LinearLayout>
</ScrollView>
    </RelativeLayout>