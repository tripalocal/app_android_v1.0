<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">
    <LinearLayout android:background="#0000"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_width="match_parent">
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:id="@+id/relativeLayout1"
        android:layout_height="55dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:elevation="3dp"
        >
        <ImageView android:id="@+id/homeButton"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:src="@drawable/home_s"
            android:scaleType="fitCenter" />
        <ImageView android:id="@+id/searchButton"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:scaleType="fitCenter"
            android:src="@drawable/search_s"
            android:layout_marginLeft="12dp" />
        <ImageView android:id="@+id/myTripButton"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:scaleType="fitCenter"
            android:src="@drawable/mytrip_s"
            android:layout_marginLeft="12dp" />
        <ImageView android:id="@+id/myProfileButton"
            android:layout_height="55dp"
            android:layout_width="55dp"
            android:scaleType="fitCenter"
            android:src="@drawable/myprofile_s"
            android:layout_marginLeft="12dp" />
    </LinearLayout>
    </LinearLayout>

    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:name="tripalocal.com.au.tripalocalbeta.Views.NavigationFragment" />

    </android.support.v4.widget.DrawerLayout>

