<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exp_detail_review_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:weightSum="1"
    android:background="@drawable/background_phonereg">
    <!--<ScrollView-->
        <!--android:id="@+id/scroll"-->
        <!--xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--xmlns:tools="http://schemas.android.com/tools"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_marginBottom="20dp">-->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="216dp"
        android:layout_height="77dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/tripalocal_logo_en"
        android:layout_marginTop="40dp" />

    <ImageView
        android:layout_width="129dp"
        android:layout_height="44dp"
        android:id="@+id/imageView3"
        android:src="@drawable/tripalocal_logo_ch"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/phone_verif"
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="-15dp">

            <EditText
                android:layout_width="0dp"
                android:id="@+id/last_name_edit"
                android:layout_height="wrap_content"
                android:background="@drawable/login_input"
                android:hint="@string/last_name"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/tripalocal_hint"
                android:textCursorDrawable="@null"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp" />

            <EditText
                android:layout_width="0dp"
                android:id="@+id/first_name_edit"
                android:layout_height="wrap_content"
                android:background="@drawable/login_input"
                android:hint="@string/first_name"
                android:inputType="text"
                android:paddingBottom="10dp"
                android:paddingLeft="35dp"
                android:paddingRight="35dp"
                android:paddingTop="10dp"
                android:textColorHint="@color/tripalocal_hint"
                android:textCursorDrawable="@null"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/password_edit_1"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/tripalocal_hint"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="@string/password_hint"
            android:inputType="textVisiblePassword"
            android:layout_marginBottom="10dp"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/password_edit_2"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input"
            android:hint="@string/password_hint_2"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/tripalocal_hint"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textVisiblePassword"
            android:layout_marginTop="10dp"
            android:textSize="15sp" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/email_edit"
            android:layout_height="wrap_content"
            android:background="@drawable/login_input"
            android:hint="@string/login_email"
            android:paddingBottom="10dp"
            android:paddingLeft="35dp"
            android:paddingRight="35dp"
            android:paddingTop="10dp"
            android:textColorHint="@color/tripalocal_hint"
            android:textCursorDrawable="@null"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="textVisiblePassword"
            android:layout_marginTop="15dp"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/go_to_tripalocal"
            android:id="@+id/confirm_btn"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:background="@color/tripalocal_green_blue"/>

    </LinearLayout>
    <!--</ScrollView>-->

</LinearLayout>